<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" type="text/css" href="/css/main.css" media="screen,projection">
	<!--Import Google Icon Font-->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<!--Let browser know website is optimized for mobile-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col s12">
				<nav>
					<div class="nav-wrapper">
						<span class="brand-logo center">ToDo List</span>
					</div>
				</nav>
			</div>
		</div>
		
		<div class="row">
			<form action="/todo" method="post" class="col s12">
				<div class="row">
					<div class="input-field col s12">
						<input type="text" class="validate" name="name">
						<label for="todo_item">ToDo Name</label>
					</div>
					<div class="input-field col s12">
						<input class="validate" type="text" id="validationTextarea" name="description">
						<label for="todo_item">ToDo Description</label>
					</div>
				</div>
				<button class="btn waves-effect waves-light" type="submit">Add ToDo Item
	    			<i class="material-icons right">send</i>
	  			</button>
			</form>
		</div>

		<div class="row">
			<div class="col s6 offset-s3">
				<% todos.forEach(todo => { %>
					<div class="card blue-grey darken-1">
						<div class="card-content white-text">
				          <span class="card-title"><%= todo.name %></span>
				          <p><%= todo.description %></p>
				        </div>
				        <form class="card-action" method="post" action="todo/<%=todo.id%>">
				        	<button class="waves-effect waves-light btn red" type="submit">Delete</button>
				        </form>
					</div>
				<% }) %>
			</div>
		</div>

	</div>

	<!-- Compiled and minified JavaScript -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>